@model PageNumModel

@{

}
<div>Home</div>

<div class="container">
    <div class="row">

        @foreach (var post in Model.post)
        {
            <div class="col-4">
                <a asp-controller="Home" asp-action="post" asp-route-id="@post.Id" class="card mt-1 mb-1">
                    <img src="@("~/image/"+post.ImageName)" class="card-img-top" height="300px" width="300px" asp-append-version="true" />
                    <div class="card-body">
                        @post.categoryModel.category
                        @post.Title
                    </div>
                </a>
            </div>
        }
    </div>
    <div class="d-flex justify-content-center">
        @if (Model.pageNum > 1)
        {
            <a asp-controller="Home" asp-action="Index" class="mr-1 btn btn-info" asp-route-pageNumber="@(Model.pageNum-1)">Back</a>

        }
        @for (var i = 1; i <= Model.maxPage; i+=10)
        {
            if (i != Model.pageNum)
            {
                <a asp-controller="Home" asp-action="Index" class="ml-1 btn btn-info" asp-route-pageNumber="@i">@i</a>
            }
        }

        @if (Model.pageNum < Model.maxPage)
        {
            <a asp-controller="Home" asp-action="Index" class="ml-1 btn btn-info" asp-route-pageNumber="@(Model.pageNum+1)">Next</a>

        }
    </div>
</div>

