@model SignInModel

<div class="login-container">
    <div class="card shadow" style="width: 20rem; height:16rem;">
        <form class="login-form" method="post" asp-controller="Account" asp-action="Login">
            <div class="form-group">
                <input asp-for="userName" class="form-control" type="text" placeholder="user name" />
            </div>
            <div class="form-group">
                <input asp-for="password" type="password" class="form-control" placeholder="password" />
            </div>
            <div class="form-group">
                <input  class="btn btn-outline-info form-control" type="submit" value="LOGIN" />
            </div>
        </form>
    </div>
</div>